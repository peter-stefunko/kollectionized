<UserControl
    x:Class="Kollectionized.Views.LoginView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Kollectionized.ViewModels"
    x:DataType="vm:LoginViewModel">
    <StackPanel Spacing="12" Margin="20">
        <TextBlock Text="Username:"/>
        <TextBox Watermark="Enter your username" Text="{Binding Username}" />

        <TextBlock Text="Password:"/>
        <TextBox PasswordChar="*" Watermark="Enter your password" Text="{Binding Password}" />

        <Button Content="Login" Command="{Binding LoginCommand}" />
        <Button Content="Register instead" Command="{Binding SwitchToRegisterCommand}" />

        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red"/>
    </StackPanel>
</UserControl>