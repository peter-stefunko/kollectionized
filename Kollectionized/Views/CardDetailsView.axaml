<UserControl
    x:Class="Kollectionized.Views.CardDetailsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Kollectionized.ViewModels"
    x:DataType="vm:CardDetailsViewModel">
    <StackPanel Spacing="8">
        <TextBlock Text="{Binding Card.Name}" FontSize="20" FontWeight="Bold"/>
        <Image Source="{Binding Card.ImageUrl}" Width="120" Height="160"/>
        <TextBlock Text="Set: "><Run Text="{Binding Card.SetName}"/></TextBlock>
        <TextBlock Text="Rarity: "><Run Text="{Binding Card.Rarity}"/></TextBlock>
        <TextBlock Text="Type: "><Run Text="{Binding Card.Type}"/></TextBlock>
        <TextBlock Text="HP: "><Run Text="{Binding Card.Hp}"/></TextBlock>
    </StackPanel>
</UserControl>