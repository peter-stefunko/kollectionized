<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Kollectionized.ViewModels"
    x:Class="Kollectionized.Views.CardInstanceEditorWindow"
    x:DataType="vm:CardInstanceEditorWindowViewModel"
    Width="400" Height="350"
    Title="Edit Card Instance">

    <StackPanel Spacing="12" Margin="20">
        <TextBlock Text="Grade:" />
        <ComboBox ItemsSource="{Binding GradeOptions}" SelectedItem="{Binding SelectedGrade}" />

        <TextBlock Text="Grading Company:" />
        <ComboBox ItemsSource="{Binding GradingCompanies}" SelectedItem="{Binding SelectedGradingCompany}" />

        <TextBlock Text="Notes:" />
        <TextBox Text="{Binding Notes}" MaxLength="100" AcceptsReturn="True" Height="60"/>

        <TextBlock Foreground="Red" Text="{Binding ErrorMessage}" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Save" Command="{Binding SaveCommand}" />
            <Button Content="Delete" Command="{Binding DeleteCommand}" />
            <Button Content="Cancel" Command="{Binding CancelCommand}" />
        </StackPanel>
    </StackPanel>
</Window>