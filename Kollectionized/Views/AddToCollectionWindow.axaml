<Window
    x:Class="Kollectionized.Views.AddToCollectionWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Kollectionized.ViewModels"
    x:DataType="vm:AddToCollectionWindowViewModel"
    Width="400" Height="350" Title="Add to Collection">

    <StackPanel Margin="20" Spacing="12">
        <TextBlock Text="Select Deck(s) to add this card to:" FontWeight="Bold"/>

        <ListBox ItemsSource="{Binding UserDecks}"
                 SelectionMode="Multiple"
                 SelectedItems="{Binding SelectedDecks}"
                 Height="180">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" FontStyle="Italic"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Add" Command="{Binding ConfirmCommand}"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>