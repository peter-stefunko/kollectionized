<UserControl
    x:Class="Kollectionized.Controls.CardInstanceFilterControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Kollectionized.ViewModels"
    x:DataType="vm:CardInstanceGridBrowserViewModel">

    <StackPanel>
        <WrapPanel Orientation="Horizontal">
            <ComboBox ItemsSource="{Binding GradeOptions}"
                      SelectedItem="{Binding SelectedGrade}"
                      PlaceholderText="Grade">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource NullableGradeConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <ComboBox 
                      ItemsSource="{Binding GradingCompanies}"
                      SelectedItem="{Binding SelectedGradingCompany}"
                      PlaceholderText="Grading Company" />
        </WrapPanel>
    </StackPanel>
</UserControl>