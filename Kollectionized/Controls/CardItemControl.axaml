<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:Kollectionized.ViewModels"
             x:Class="Kollectionized.Controls.CardItemView"
             x:DataType="viewModels:CardItemViewModel">

    <Border Classes="Clickable"  PointerPressed="OnCardClicked">
        <StackPanel>
            <Image Source="{Binding Image}" Classes="Item"></Image>
            <TextBlock Text="{Binding Card.Name}" />
        </StackPanel>
    </Border>
</UserControl>