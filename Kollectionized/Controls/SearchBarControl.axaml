<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Kollectionized.Controls.SearchBarControl"
             xmlns:viewModels="clr-namespace:Kollectionized.ViewModels"
             x:DataType="viewModels:CardBrowserViewModel">
    
    <TextBox Width="200"
             Watermark="Search by name..."
             Text="{Binding NameQuery, UpdateSourceTrigger=PropertyChanged}"
             HorizontalAlignment="Left" />
</UserControl>