<UserControl
    x:Class="Kollectionized.Controls.DeckBrowserView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:Kollectionized.Controls"
    xmlns:vm="clr-namespace:Kollectionized.ViewModels"
    x:DataType="vm:DeckBrowserViewModel">

    <DockPanel>
        <StackPanel Margin="16" Spacing="12" DockPanel.Dock="Top">
            <StackPanel>
                <TextBlock Text="{Binding DeckName}" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="{Binding DeckDescription}" FontStyle="Italic" Margin="0,4,0,0"/>
                <TextBlock Text="{Binding DeckOwnerUsername, StringFormat='Owner: {0}'}"/>
                <TextBlock Text="{Binding DeckCreatedAt, StringFormat='Created: {0:yyyy-MM-dd}'}"/>
                <TextBlock Text="{Binding CardCountDisplay}" FontWeight="SemiBold"/>
            </StackPanel>
        </StackPanel>
        
        <ScrollViewer>
            <DockPanel>
                <views:CardInstanceGridBrowserView />    
            </DockPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>